@model Model.EF.PRODUCT

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<h2>Thông Tin Chi Tiết</h2>

<div>
    <h4>NÔNG SẢN</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Loại nông sản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PRODUCT_KIND.Name_ProductKind)
        </dd>

        <dt>
            Tên nông sản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name_Product)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Model.Image_Product" />
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id_Product })
</p>
